<!DOCTYPE html>
<html>
  <head>
    <title>PostOffice</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to fa_icon('Employee Connection', text: "Employee Connection", class: "fa fa-users"), root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome <%= current_user.name %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
<!-- Can Can Can -->
            <% if can? :manage, User %>
              <li><%= link_to fa_icon('Supervisors', text: "Supervisors", class: "fa fa-user-circle"), supervisor_users_path %></li>
            <% end %>
<!-- End of Can Can Can -->
            <li><%= link_to fa_icon('Edit Profile', text: "Edit Profile", class: "fa fa-user-circle-o"), edit_user_registration_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to fa_icon('Sign Out', text: "Sign Out", class: "fa fa-hand-peace-o"), destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Sign In/ Sign Up', new_user_session_path %></li>
    <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

  	<div class="container">
    <%= yield %>
    </div>






  </body>
</html>
